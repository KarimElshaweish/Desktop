<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/EditeText"
    tools:context="com.example.karim.troupia.photoeidt">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/ImageBack"
       android:src="@drawable/left_back_ic"
       />
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:id="@+id/tools"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/upload_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/upload_btn"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/App_yellow"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"

            />
        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/camerabtn"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/App_yellow"
            android:id="@+id/camer_btn"
            android:onClick="start_camera"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gallery_btn"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/App_yellow"
            android:id="@+id/gallery_btn"
            android:onClick="callEditImage"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</RelativeLayout>
